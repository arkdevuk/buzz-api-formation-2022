{% macro review_stars(nbr = 0) %}
    {% for i in range(1,5) %}
        {% if i <= nbr %}
            <img src="/assets/images/emojione_star.png" alt="star" class="star ">
        {% else %}
            <img src="/assets/images/emojione_star.png" alt="star"
                 class="star disabled">
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro pricing(price, discount = 0, classPricing = 'h3', colorClass = '{{ colorClass }}') %}
    {% if price != 0 %}
        {% if discount != 0 %}
            {# a un discount #}
            <div class="price">
                <div class="text-muted m-0 text-decoration-line-through">
                    {{ price }}€
                </div>
                <div class="{{ classPricing }} {{ colorClass }} m-0">
                    {{ (price*((100-discount)/100))|number_format(2, ',', ' ') }}€
                </div>
            </div>
        {% else %}
            <div class="price">
                <div class="{{ classPricing }} {{ colorClass }} m-0">
                    {{ price }}€
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="price">
            <div class="{{ classPricing }} {{ colorClass }} m-0">
                GRATUIT
            </div>
        </div>
    {% endif %}
{% endmacro %}