<section class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-8 position-relative mb-4">
            <div class="hero-header-img position-relative">
                {% if gameDisplay.pictures.first != false %}
                    <img src="{{ gameDisplay.pictures.first.url }}"
                         alt="{{ gameDisplay.name }}" class="">
                {% else %}
                    <img src="/assets/images/satisfactory.png" alt="satisfactory">
                {% endif %}
            </div>
            <div class="hero-header-text">
                <h2>{{ gameDisplay.name }}</h2>
                <p>{{ gameDisplay.description }}</p>

                <div class="d-block d-sm-flex justify-content-between">
                    <div class="d-block d-sm-flex align-items-center">

                        <div class="avis-text me-4 mb-2 mb-sm-0">
                            {% if gameDisplay.reviewCount is null or gameDisplay.reviewCount <= 0 %}
                                <p class="m-0 text-muted">No Review</p>
                            {% else %}
                                <p class="m-0">Review <span
                                            style="white-space:nowrap">{{ gameDisplay.reviewCount|number_format(0, ',', ' ') }}</span>
                                </p>
                            {% endif %}
                            <div class="avis d-flex align-items-center">
                                {% import "macros/pricing.macro.twig" as pricingMacro %}
                                {{ pricingMacro.review_stars(gameDisplay.averageReview) }}
                            </div>
                        </div>
                        <div class="d-flex  mb-2 mb-sm-0">
                            <a href="{{ path('page_produit_steam', {slug: gameDisplay.slug}) }}"
                               class="btn btn-secondary me-2">Get
                                it now ðŸ‘€ !</a>
                            <a href="#"
                               data-id="{{ gameDisplay.id }}"
                               class="btn btn-primary btn-sm d-flex justify-content-center align-items-center add-to-cart">ðŸ›’</a>
                        </div>
                    </div>
                    {% import "macros/pricing.macro.twig" as pricingMacro %}
                    {{ pricingMacro.pricing(gameDisplay.price, gameDisplay.promotion) }}
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4 mb-4">
            {% for img in gameDisplay.pictures %}
                {% if not loop.first and loop.index <= 3 %}
                    <div class="mb-2 hero-header-img-small">
                        <img style="border-radius: 20px;"
                             src="{{ img.url }}" alt="{{ gameDisplay.name }}" class="w-100 border-3">
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>


</section>